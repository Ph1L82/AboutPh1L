<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cl.philipsoft.aboutph1l.EmailFragment">
    <!-- TODO: Update blank fragment layout -->
    <Button
        android:id="@+id/contactBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CONTACTAME"
        android:textColor="@android:color/white"
        android:drawableRight="@drawable/ic_contact_mail_white_24px"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/msgWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <EditText
            android:id="@+id/msgEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/sendBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="ENVIAR"
        android:drawableRight="@android:drawable/ic_dialog_email"
        android:textColor="@android:color/white"/>
</LinearLayout>



